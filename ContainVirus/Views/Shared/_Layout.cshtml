<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContainVirus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContainVirus.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="virus-logo-icon me-2">
                        <svg width="24" height="24" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <defs>
                                <radialGradient id="logoVirusGradient" cx="0.35" cy="0.35" r="0.65">
                                    <stop offset="0%" stop-color="#ffffff" />
                                    <stop offset="70%" stop-color="#f0f0f0" />
                                    <stop offset="100%" stop-color="#e0e0e0" />
                                </radialGradient>
                            </defs>
                            <g>
                                <line x1="50" y1="28" x2="50" y2="8" stroke="#ffffff" stroke-width="8" stroke-linecap="round" />
                                <circle cx="50" cy="8" r="5" fill="#f0f0f0" />
                            </g>
                            <g transform="rotate(45 50 50)">
                                <line x1="50" y1="28" x2="50" y2="8" stroke="#ffffff" stroke-width="8" stroke-linecap="round" />
                                <circle cx="50" cy="8" r="5" fill="#f0f0f0" />
                            </g>
                            <g transform="rotate(90 50 50)">
                                <line x1="50" y1="28" x2="50" y2="8" stroke="#ffffff" stroke-width="8" stroke-linecap="round" />
                                <circle cx="50" cy="8" r="5" fill="#f0f0f0" />
                            </g>
                            <g transform="rotate(135 50 50)">
                                <line x1="50" y1="28" x2="50" y2="8" stroke="#ffffff" stroke-width="8" stroke-linecap="round" />
                                <circle cx="50" cy="8" r="5" fill="#f0f0f0" />
                            </g>
                            <g transform="rotate(180 50 50)">
                                <line x1="50" y1="28" x2="50" y2="8" stroke="#ffffff" stroke-width="8" stroke-linecap="round" />
                                <circle cx="50" cy="8" r="5" fill="#f0f0f0" />
                            </g>
                            <g transform="rotate(225 50 50)">
                                <line x1="50" y1="28" x2="50" y2="8" stroke="#ffffff" stroke-width="8" stroke-linecap="round" />
                                <circle cx="50" cy="8" r="5" fill="#f0f0f0" />
                            </g>
                            <g transform="rotate(270 50 50)">
                                <line x1="50" y1="28" x2="50" y2="8" stroke="#ffffff" stroke-width="8" stroke-linecap="round" />
                                <circle cx="50" cy="8" r="5" fill="#f0f0f0" />
                            </g>
                            <g transform="rotate(315 50 50)">
                                <line x1="50" y1="28" x2="50" y2="8" stroke="#ffffff" stroke-width="8" stroke-linecap="round" />
                                <circle cx="50" cy="8" r="5" fill="#f0f0f0" />
                            </g>
                            <circle cx="50" cy="50" r="22" fill="url(#logoVirusGradient)" />
                            <circle cx="45" cy="45" r="4" fill="#e0e0e0" opacity="0.6" />
                            <circle cx="55" cy="48" r="3" fill="#e0e0e0" opacity="0.5" />
                            <circle cx="50" cy="55" r="3.5" fill="#e0e0e0" opacity="0.6" />
                            <circle cx="42" cy="52" r="2.5" fill="#e0e0e0" opacity="0.4" />
                            <circle cx="57" cy="54" r="2" fill="#e0e0e0" opacity="0.5" />
                        </svg>
                    </span>
                    ContainVirus
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
